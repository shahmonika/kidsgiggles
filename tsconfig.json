{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "moduleResolution": "node",
    "sourceMap": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": false,
    "removeComments": false,
    "lib": ["es2015", "dom"],
    "noImplicitAny": false,
    "suppressImplicitAnyIndexErrors": true,
    "types" : [ "node" ]
  },
  "compileOnSave": true,
  "include":[
    "app/**/*"
  ],
  "exclude": [
    "node_modules/*",
    "**/*-aot.ts"
  ]

}
